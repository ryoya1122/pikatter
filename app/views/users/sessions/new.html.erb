<div class="container" style="height: 80vh;">
<h1 class="font-weight-bold text-center align-middle" style="line-height: 20vh;">感情を数値化するSNS Pikatter</h1><br>
<div class="row">
<button type="button" class="btn btn-primary col-6" data-toggle="collapse" data-target="#collapseLogin" aria-expanded="false" aria-controls="collapseLogin">
ログイン
</button>
<button type="button" class="btn btn-success col-6" data-toggle="collapse" data-target="#collapseSignin" aria-expanded="false" aria-controls="collapseLogin">
新規登録
</button>
</div>
<div class="row"><div class="col-6">
<div class="collapse col-12" id="collapseLogin">
  <div class="card card-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <label>ユーザー名</label>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control" %>
  </div>
     <div class="field">
    <label>パスワード</label>
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
  </div>

  <div class="actions row">
    <%= f.submit "ログイン", class:"form-control btn-info col-md-6 offset-md-3" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
  </div>
</div>
</div>
<div class="col-6">
<div class="collapse col-12" id="collapseSignin">
  <div class="card card-body">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-group">
  <div class="field">
    <label>ユーザー名(半角英数字4～12文字)</label>
    <%= f.text_field :name, class:"form-control col-12",autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
     <label>ニックネーム(11文字以下)</label>
    <%= f.text_field :nickname, class:"form-control col-12", autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field">
     <label>メールアドレス</label>
    <%= f.email_field :email, class:"form-control col-12", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
     <label>パスワード</label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, class:"form-control col-12", autocomplete: "new-password" %>
  </div>

  <div class="field">
     <label>パスワード(再入力)</label>
    <%= f.password_field :password_confirmation, class:"form-control col-12", autocomplete: "new-password" %>
  </div>



  <div class="actions">
    <%= f.submit "新規登録", class:"btn btn-info col-md-6 offset-md-3" %>
  </div></div>
<% end %>

<%= render "users/shared/links" %>
</div>
</div>
</div>
</div>