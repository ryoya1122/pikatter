<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="form-group">
  <div class="field">
    <label>ユーザー名(半角英数字4～12文字)</label>
    <%= f.text_field :name, class:"form-control col-3",autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
     <label>ニックネーム(11文字以下)</label>
    <%= f.text_field :nickname, class:"form-control col-3", autofocus: true, autocomplete: "nickname" %>
  </div>

  <div class="field">
     <label>メールアドレス</label>
    <%= f.email_field :email, class:"form-control col-3", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
     <label>パスワード</label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, class:"form-control col-3", autocomplete: "new-password" %>
  </div>

  <div class="field">
     <label>パスワード(再入力)</label>
    <%= f.password_field :password_confirmation, class:"form-control col-3", autocomplete: "new-password" %>
  </div>



  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-info" %>
  </div></div>
<% end %>