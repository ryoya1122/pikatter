<% if Tweet.find(tweet[:id]).retweeted_by?(current_user) %>
    <%= link_to tweet_retweets_path(Tweet.find(tweet[:id])), method: :delete, remote: true do %>
    <i class="fas fa-retweet" aria-hidden="true" style="color: green;"></i>
      <%= Tweet.find(tweet[:id]).retweets.count %>
    <% end %>
<% else %>
    <%= link_to tweet_retweets_path(Tweet.find(tweet[:id])), method: :post, remote: true do %>
    <i class="fas fa-retweet" aria-hidden="true"></i>
      <%= Tweet.find(tweet[:id]).retweets.count %>
    <% end %>
<% end %>