<% if Tweet.find(tweet[:id]).favorited_by?(current_user) %>
    <%= link_to tweet_favorites_path(Tweet.find(tweet[:id])), method: :delete, remote: true do %>
    <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
      <%= Tweet.find(tweet[:id]).favorites.count %>
    <% end %>
<% else %>
    <%= link_to tweet_favorites_path(Tweet.find(tweet[:id])), method: :post, remote: true do %>
    <i class="fa fa-heart-o" aria-hidden="true"></i>
      <%= Tweet.find(tweet[:id]).favorites.count %>
    <% end %>
<% end %>